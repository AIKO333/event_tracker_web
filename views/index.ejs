                <div id="eventsData" data-events="<%= JSON.stringify(eventsResult) %>"></div>

                <h1 class="text-center rainbow-text">Events</h1>
                <br>
                    <% 
                    if(profileData.length > 0)
                    {
                        if(!eventsResult.length > 0)
                        {
                        %>
                        <p class="none-text" style="color: #c11a2b;">Add some Events!</p>
                        <%
                        }
                    }
                    else
                    {
                    %>
                    <p class="none-text" style="color: #c11a2b;">Make a Profile to add some Events!</p>
                    <%  
                    }
                    %>

                <div id="board">

                </div>

            </section>

            <section id="profile" class="hidden">
                <% 
                if(profileData.length > 0) 
                { 
                %>
                <div class="container">
                    <div class="main-body">
                        <div class="col-lg-8 hidden" id="profile-edit">
